@using RockDMZ.Features
@using RockDMZ.Domain
@using RockDMZ.Features.PromotionExtension
@model Create.Command
@{
    ViewBag.Title = "Create";
}
<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Promotion Extension Project</h4>
    <hr />
    @Html.ValidationDiv()
    @Html.FormBlock(m => m.Name)
    <div class="form-group">
        <label asp-for="ProductFeedLocation" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <select asp-for="ProductFeedLocation" asp-items="Model.ProductFeedLocations" class="form-control"></select>
            <span asp-validation-for="ProductFeedLocation" class="text-danger"></span>
        </div>
    </div>
    @Html.FormBlock(m => m.DefaultPromoDurationInDays)
    <div class="form-group">
        <label asp-for="UsePercentages" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input type="checkbox" asp-for="UsePercentages" value="true" class="form-control"/>
            <span asp-validation-for="UsePercentages" class="text-danger"></span>
        </div>
    </div>
    @Html.FormBlock(m => m.MinimumPercentage)
    <div class="form-group">
        <label asp-for="UseAmounts" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input type="checkbox" asp-for="UseAmounts" value="true" class="form-control" />
            <span asp-validation-for="UseAmounts" class="text-danger"></span>
        </div>
    </div>
    @Html.FormBlock(m => m.MinimumAmout)
    @Html.FormBlock(m => m.OrMinimumAmountPercentage)
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}
<div>
    @Html.ActionLink("Back to List", nameof(PromotionExtensionController.Index))
</div>
